{
  "name": "contextguard",
  "version": "0.2.0",
  "description": "Security monitoring wrapper for MCP servers with enterprise features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/amironi/contextguard#readme",
  "author": "Amir Mironi",
  "license": "MIT",
  "bin": {
    "contextguard": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./wrapper": {
      "types": "./dist/wrapper.d.ts",
      "require": "./dist/wrapper.js",
      "import": "./dist/wrapper.js"
    },
    "./premium": {
      "types": "./dist/premium-features.d.ts",
      "require": "./dist/premium-features.js",
      "import": "./dist/premium-features.js"
    },
    "./traceability": {
      "types": "./dist/mcp-traceability-integration.d.ts",
      "require": "./dist/mcp-traceability-integration.js",
      "import": "./dist/mcp-traceability-integration.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint . && pnpm tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "npm publish & npm install -g contextguard"
  },
  "keywords": [
    "mcp",
    "security",
    "ai",
    "llm",
    "claude",
    "traceability",
    "compliance",
    "enterprise",
    "monitoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/amironi/contextguard.git"
  },
  "bugs": {
    "url": "https://github.com/amironi/contextguard/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.79.0"
  }
}